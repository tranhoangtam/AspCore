@model D16_EFCore_CodeFirst.Models.HangHoa

<div class="modal-body">
    <h1>Sửa hàng hóa @Model.TenHH</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateOrEdit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaHH" />
                <div class="form-group">
                    <label asp-for="TenHH" class="control-label"></label>
                    <input asp-for="TenHH" class="form-control" />
                    <span asp-validation-for="TenHH" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hinh" class="control-label"></label>
                    <img src="~/Hinh/HangHoa/@Model.Hinh" height="120" />
                    <input asp-for="Hinh" class="d-none" />
                    <input type="file" name="fHinh" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MoTa" class="control-label"></label>
                    <textarea asp-for="MoTa" class="form-control"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DonGia" class="control-label"></label>
                    <input asp-for="DonGia" class="form-control" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuong" class="control-label"></label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaLoai" class="control-label"></label>
                    <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.Loai"></select>
                    <span asp-validation-for="MaLoai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>




